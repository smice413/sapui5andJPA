<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	<Popover
		title="{changesModel>/changes/0/changeTitle}"
		placement="PreferredTopOrFlip"
		class="sapUiRtaPopover">
		<l:VerticalLayout>
			<Text
				text="{changesModel>/changes/0/description}"
				class="sapUiTinyMargin"/>
			<Text
				text="{changesModel>/changes/0/date}"
				class="sapUiTinyMargin"/>
		</l:VerticalLayout>
		<footer>
			<FlexBox
				direction="RowReverse">
				<items>
					<Button
						visible="{changesModel>/changes/0/enableDetailButton}"
						text="{i18n>TIT_CHANGEVISUALIZATION_DETAILS}"
						icon="sap-icon://display"
						press=".showDependentElements"
						class="sapUiTinyMargin"/>
				</items>
			</FlexBox>
		</footer>
	</Popover>
</core:FragmentDefinition>